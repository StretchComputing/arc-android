<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/get_invoice_layout"
    style="@style/ParentView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activities.ViewCheck" >
    
    <ScrollView android:layout_width="match_parent"
    android:layout_height="wrap_content">
    
    <LinearLayout 
    android:id="@+id/view_check_layout"
    style="@style/ParentView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center">
    
     <TextView
     android:id="@+id/title"
     android:layout_width="wrap_content"
     android:layout_height="match_parent"
     android:padding="10dp"
     android:textStyle="bold"
     android:textSize="25sp"
     android:gravity="center"/>
     
      <Button
        android:id="@+id/view_payments_button"
        style="@style/CustomButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onViewPaymentsClick"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:text="@string/view_payments" />
      
       <Button
        android:id="@+id/make_payments_button"
        style="@style/CustomButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onMakePaymentClick"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:text="@string/make_payment" />
     
     <TextView
     android:id="@+id/check_details"
     android:layout_width="wrap_content"
     android:layout_height="match_parent"
     android:padding="10dp"
     android:textStyle="bold"
     android:textSize="15sp"
     android:gravity="center"/>
        
    </LinearLayout>
    </ScrollView>
    
</LinearLayout>